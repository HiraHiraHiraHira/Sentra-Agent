{
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "enum": ["continue", "patch", "stop"],
      "description": "Decision: continue execution, patch remaining steps, or stop."
    },
    "isComplete": {
      "type": "boolean",
      "description": "If true, the objective is already satisfied based on current execution results. When true, you should set action=stop and provide a final reason."
    },
    "reason": {
      "type": "string",
      "description": "Short reasoning."
    },
    "operations": {
      "type": "array",
      "description": "Patch operations. Only allowed to target pending (not-yet-executed) steps by stepId. Use stepId for references.",
      "items": {
        "type": "object",
        "properties": {
          "op": {
            "type": "string",
            "enum": ["append", "replace", "delete"],
            "description": "append: add new steps at end; replace: update an existing pending step; delete: skip an existing pending step (do not remove history)."
          },
          "targetStepId": {
            "type": "string",
            "description": "Target stepId for replace/delete."
          },
          "steps": {
            "type": "array",
            "items": { "$ref": "#/definitions/step" }
          },
          "step": { "$ref": "#/definitions/step" }
        },
        "required": ["op"],
        "additionalProperties": true
      }
    }
  },
  "required": ["action"],
  "additionalProperties": true,
  "definitions": {
    "step": {
      "type": "object",
      "properties": {
        "stepId": { "type": "string" },
        "displayIndex": { "type": "integer" },
        "aiName": { "type": "string" },
        "reason": { "type": "array", "items": { "type": "string" } },
        "draftArgs": { "type": "object" },
        "dependsOnStepIds": { "type": "array", "items": { "type": "string" } },
        "nextStep": { "type": "string" }
      },
      "required": ["aiName"],
      "additionalProperties": true
    }
  }
}
